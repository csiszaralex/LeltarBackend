generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Owner {
  id        Int      @id @default(autoincrement())
  name      String
  type      OwnerType @default(PERSON)
  items     Item[]
}

model Room {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  items     Item[]
}

model Item {
  id            Int        @id @default(autoincrement())
  code          String     @unique
  name          String
  description   String?
  state         ItemState  @default(AVAILABLE)
  purchaseDate  DateTime?
  value         Float?
  ownerId       Int
  owner         Owner      @relation(fields: [ownerId], references: [id])
  roomId        Int?
  room          Room?      @relation(fields: [roomId], references: [id])
  images        ItemImage[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model ItemImage {
  id        Int      @id @default(autoincrement())
  url       String
  itemId    Int
  item      Item     @relation(fields: [itemId], references: [id])
}

enum OwnerType {
  PERSON
  COMPANY
}

enum ItemState {
  AVAILABLE
  IN_USE
  DAMAGED
  UNDER_REPAIR
  SCRAPPED
}
